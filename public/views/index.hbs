{{!-- ---- Agregar productos ------------------------------- --}}

<div class="jumbotron py-3" id="agregar">
    <h1 class="pb-4 text-center">Agregar Productos</h1>
    <div class="container" style="    width: 50%;
            background: #ffffffbf;
            border-radius: 2%;
            padding: 1em;">
        <form class="form" onsubmit="return guardarProducto()">
            <div class="mb-3">
                <label class="form-label">Nombre:</label>
                <input id="title" type="text" class="form-control" name="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Precio:</label>
                <input id="price" type="text" class="form-control" name="price" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Foto:</label>
                <input id="thumbnail" type="text" class="form-control" name="thumbnail" required>
            </div>
            <button type="submit" class="btn btn-secondary">Enviar</button>
        </form>
    </div>
</div>

<div class="d-flex justify-content-around fs-1 m-4">
    <i class="bi bi-xbox"></i>
    <i class="bi bi-playstation"></i>
    <i class="bi bi-nintendo-switch"></i>
</div>

{{!-- ---- listar productos ------------------------------- --}}

<div class="row m-0" id="listar">
    <div class="col-sm-3 p-0 text-center">
        <div class="jumbotron" style="height: 100%">
            <h3 style="padding: 30% 0%;">Los mejores juegos en un solo lugar</h3>
            <i class="bi bi-controller fs-1"></i>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="well">
                <hr>
            <h2 class="text-center py-3">Listado de productos</h2>
            <table class="table" id="tablaProductos" style="display: none;">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="col-sm-6">Nombre</th>
                        <th scope="col" class="col-sm-3">Precio</th>
                        <th scope="col" class="col-sm-3">Foto</th>
                    </tr>
                </thead>
                <tbody id="listaProductos">
                </tbody>
            </table>
            <h4 class="text-center py-5" id="sinProductos"> - No se encontraron productos - </h4>
        </div>
    </div>
</div>

{{!-- ---- Centro de mensajes -------------------------------- --}}

<div class="row m-0" id="chat">

    <div class="col-sm-6 py-3 px-0 text-center">
        <div class="jumbotron py-3">
            <h2 class="pb-4 py-4 text-center">Centro de mensajes</h2>
            <div class="container" style="    width: 70%;
                    background: #ffffffbf;
                    border-radius: 2%;
                    padding: 1em;">
                <form onsubmit="return enviarMensaje()">
                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" id="email" class="form-control" placeholder="Ingrese su email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"></label>
                        <input type="text" id="mensaje" class="form-control" placeholder="Ingrese su mensaje" required>
                    </div>
                    <button type="submit" class="btn btn-secondary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <hr>
        <h2 class="pt-3 text-center"> Historial de mensajes </h2>
        <table class="table">
            <div id="listaMensajes"> </div>
            <div>
                <button id="eliminarMensaje" class="btn btn-secondary">Borrar mensajes</button>
            </div>
        </table>
        <h4 class="text-center py-5" id="sinMensajes"> - No hay mensajes disponibles - </h4>
    </div>